<%= form_for(@item) do |f| %>
<!-- REGISTRATION FORM -->
<div class="text-center" style="padding:50px 0">
	<div class="logo">nowy przedmiot</div>
	<!-- Main Form -->
	<div class="login-form-1">
		<form id="register-form" class="text-left">
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
					<div class="form-group">
						
					    <%= f.text_field :name, class:"form-control", placeholder: "nazwa" %>

					</div>
					<div class="form-group">
						
						<%= f.text_field :sn, class: "form-control", placeholder: "numer seryjny" %>
						
					</div>
					<div class="form-group">
						
						<%= f.text_field :barcode, class:"form-control", placeholder: "kod kreskowy" %>
						
					</div>
					
					<div class="form-group">
						
						<%= f.number_field :quantity, class:"form-control", placeholder: "ilosc" %>
						
					</div>
					
					<div class="form-group">
						
						<%= f.text_area :description, class:"form-control", placeholder: "opis" %>
						
					</div>
				</div>
				<button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
			</div>
			<div class="etc-login-form">
			</div>
		</form>
	</div>
	<!-- end:Main Form -->
</div>
<% end %>
