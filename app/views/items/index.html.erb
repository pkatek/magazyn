<% if @items.blank? %>
<p>Niema przedmiotów w systemie</p>
<% else %>

<p><%= link_to "Dodaj nowy przedmiot", {:action => 'new' }%></p>
   
<div class="container">
			<div class="col-md-12">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">Przedmioty</h3>
						<div class="pull-right">
							<span class="clickable filter" data-toggle="tooltip" title="Filtr tabeli" data-container="body">
								<i class="glyphicon glyphicon-filter"></i>
							</span>
						</div>
					</div>
					<div class="panel-body">
						<input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="f" />
					</div>
					<table class="table table-hover" id="dev-table">
						<thead>
							<tr>
								<th>id</th>
								<th>nazwa</th>
								<th>kod kreskowy</th>
								<th>sn</th>
								<th>ilość</th>
							</tr>
						</thead>
						<tbody>
							<% @items.each do |i| %>
							<tr>
								<td><%= i.id %></td>
								<td><%=link_to i.name, item_path(i) %></td>
								<td><%= i.barcode %></td>
								<td><%= i.sn %></td>
								<td><%= i.quantity %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
</div>




<% end %>

